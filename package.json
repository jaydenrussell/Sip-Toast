{
  "name": "sip-toast",
  "version": "0.70.5",
  "buildDate": "2026-02-14T06:30:00.000Z",
  "description": "Windows 11-ready SIP caller ID toast that looks up clients via Acuity Scheduling.",
  "main": "src/main/main.js",
  "author": "Jayden Russell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenrussell/Sip-Toast.git"
  },
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "lint": "eslint \"src/**/*.js\"",
    "prepackage": "node scripts/increment-version.js",
    "package": "electron-builder --win --config.win.target=dir",
    "build": "npm run package",
    "package:nsis": "electron-builder --win --config.win.target=nsis",
    "package:dir": "electron-builder --win --config.win.target=dir",
    "create-cert": "powershell -ExecutionPolicy Bypass -File scripts/create-certificate.ps1",
    "release": "node scripts/create-release.js",
    "build-and-release": "npm run package:nsis && npm run release"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "electron-store": "^7.0.3",
    "electron-updater": "^6.7.3",
    "eventemitter3": "^5.0.1",
    "sip": "^0.0.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2",
    "eslint": "^9.12.0"
  },
  "build": {
    "appId": "com.yoursolution.siptoast",
    "productName": "SIP Toast",
    "files": [
      "src/**/*",
      "Images/**/*",
      "package.json"
    ],
    "fileAssociations": [],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "extraFiles": [
      {
        "from": "scripts/update-helper.bat",
        "to": "resources/update-helper.bat"
      }
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "Images/app.ico",
      "artifactName": "${productName} ${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SIP Toast"
    },
    "appx": {
      "identityName": "YourSolution.SIPToast",
      "publisher": "CN=Jayden Russell",
      "publisherDisplayName": "Jayden Russell",
      "applicationId": "SIPToast",
      "displayName": "SIP Toast",
      "backgroundColor": "#f8f9fc"
    },
    "msi": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SIP Toast",
      "menuCategory": "Utilities",
      "warningsAsErrors": false
    },
    "msiProjectCreated": null,
    "afterPack": "scripts/optimize-build.js",
    "asar": true,
    "asarUnpack": [],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "compression": "maximum",
    "removePackageScripts": true,
    "publish": {
      "provider": "github",
      "owner": "jaydenrussell",
      "repo": "Sip-Toast"
    }
  }
}
